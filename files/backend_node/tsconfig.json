{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": ".",
    "watch": true
  },
  "exclude": [
    "node_modules",
    "typings",
  ]
}
